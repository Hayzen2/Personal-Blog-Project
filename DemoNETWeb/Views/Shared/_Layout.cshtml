<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 25px;
            margin: 0;
        }

        .navbar {
            background: linear-gradient(45deg, darkviolet, blue );
            display: flex;
            justify-content: left;
            padding: 15px;
        }
        .title:hover {
            color: white;
        }
        .navbar a {
            margin-right: 20px;
            text-decoration: none;
            color: white;
        }

        .navbar-link:hover {
            color: red;
        }
        .navbar-brand:hover {
            text-decoration: none;
        }
        .container {
            margin-top: 20px;
        }

        .bi {
            margin-right: 8px;
        }

        .logo {
            font-size: 40px;
            color: red;
        }

        .title {
            font-size: 3rem;
            color: white;
            margin-right: 30px;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <span class="navbar-brand title"><i class="bi bi-box2-heart logo"></i> My Blog</span>
        <a class="navbar-link home" href="/"><i class="bi bi-house-fill fs-2"></i>Home</a>
        <a class="navbar-link add" href="/Home/AddForm"><i class="bi bi-plus-circle-fill fs-2"></i>Add new post</a>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
